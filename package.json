{
    "devDependencies": {
        "js-cookie": "~3.0.5",
        "alpinejs": "~3.13.0",
        "tailwindcss": "~3.3.3",
        "@tailwindcss/typography": "~0.5.10"
    },
    "scripts": {
        "tailwind-build": "npx tailwindcss -i ./assets/css/style.css -o ./assets/css/dist-style.css --minify",
        "copy-vendor-libs": "npm run cp-alpinejs && npm run cp-js-cookie",
        "cp-alpinejs": "cp node_modules/alpinejs/dist/cdn.min.js assets/js/alpinejs.min.js",
        "cp-js-cookie": "cp node_modules/js-cookie/dist/js.cookie.min.js assets/js/js-cookie.min.js"
    }
}
